<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12">
      <%= form_with model: @article, local: true, :html => {:class => "form-horizontal"} do |form| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :title %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :title, class: "form-control", placeholder: "Article Title" %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :description %>
        </div>
        <div class="col-sm-8">
          <%= form.text_area :text,  class: "form-control", placeholder: "Article Content", rows: 10 %>
        </div>
        
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
             <% cb.label(class: "checkbox-inline input_checkbox") { cb.check_box(class: "check_box") + cb.text} %>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
 
    <% end %>
  </div>
</div>