<%= render 'shared/errors', obj: @category %>

<div class="row">
  <div class="col-xs-12">
      <%= form_with model: @category, local: true, :html => {:class => "form-horizontal"} do |form| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :name %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :name, class: "form-control", placeholder: "Enter Category name" %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit  class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
 
    <% end %>
  </div>
</div>